# Portal de Trabajo UTP - .htaccess

RewriteEngine On

# Establecer la base del proyecto
RewriteBase /Portal_De_Trabajo_UTP_V2/

# Seguridad - Prevenir acceso a archivos sensibles
<FilesMatch "\.(env|sql|log|md|git)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Prevenir listado de directorios
Options -Indexes

# Si el archivo o directorio existe, servir directamente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Permitir acceso a assets
RewriteRule ^assets/(.*)$ assets/$1 [L]

# Configuraci√≥n PHP
php_flag display_errors On
php_value error_reporting E_ALL
php_value upload_max_filesize 5M
php_value post_max_size 6M

# UTF-8
AddDefaultCharset UTF-8